<div class="span12">
  <%= render partial: "title_box" %>
  <br>
</div>
<div class="span5">
  <%= render partial: "image_box" %>
</div>
<div class="span7">
  <div class="row">
    <div class="span7">
      <div class="white-box">
        <div id='video' style='display:block;width:530px;height:350px;'>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="span4">
      <br>
      <%= render partial: "info_box" %>
    </div>
    <div class="span3">
      <br>
      <div class="white-box" align="center">
        <h3>鄉民統計</h3>
        <div class="vote-result">
          <%= render partial: "vote_box" %>
        </div>
        <br>
      </div>
    </div>
    <div class="span3">
      <br>
      <div class="white-box nav-button" align="center">
        <%= render_next_link %>
        <%= render_prev_link %>
      </div>
    </div>
  </div>
</div>
<div class="span12"><hr></div>
<div class="span12">
  <%= render partial: "complain" %>
</div>
<div class="span12" align="center">
  <%= fb_comments(Setting.domain + url_for(), :width => "940px", :mobile => false ) %>
</div>
<div class="span12">
  <div class="white-box">
    <div class="row">
      <div class="span12" align="center"><h3>再送上六位正妹</h3></div>
      <br>
      <%= render partial: "random_result" %>
    </div>
  </div>
</div>
<%= content_for :javascripts do %>
  <%= flowplayer_for :video, '/flowplayer.swf', 'jquery' do |player| %>
    <% player.playlist [{:url => @link.clip, :autoPlay => false, :autoBuffering => false }] %>
      <% player.onLoad do %>
        <% 'this.unmute();' %>
      <% end %>
  <% end %>
<% end %>
<%= content_for :javascripts do %>
<script type="text/javascript">
  $("#check-result").click(function(){
    $("div.vote-result").replaceWith('<div class="votes">覺得她正的共 <%= content_tag(:span, @link.likes.size, :class => "label label-info") %> 票<br>覺得不正的共 <%= content_tag(:span, @link.dislikes.size, :class => "label label-info") %> 票</div>');
  })
</script>
<% end %>