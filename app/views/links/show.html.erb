<div class="span12">
  <%= render partial: "tool_box" %>
  <br>
</div>
<div class="span4">
  <%= render partial: "image_box" %>
</div>
<div class="span8">
  <div class="row">
    <div class="span8">
      <div class="white-box">
        <!-- <div id='video' style='display:block;width:610px;height:380px;'>
        </div> -->
        <video controls style="display:block;width:610px;height:350px;">
          <source src="<%= @link.clip %>" type="video/mp4">
        </video>
      </div>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="span8">
      <span class="btn btn-warning" id="toggleInfo">看基本資料</span>
      <% if @link.link_type == "daily" %>
        <%= link_to("打開蘋果日報「今天我最美」", @link.url, :class => "btn btn-danger", :target => "_blank") %>
      <% else %>
        <%= link_to("打開蘋果日報「運動靚妹」", @link.url, :class => "btn btn-danger", :target => "_blank") %>
      <% end %>
      <div class="white-box detail">
        <h4><%= render_link_date(@link) %> - <%= render_link_girl_name(@link) %></h4>
        <%= @link.detail.html_safe %>
        <br>
        <p>資料來源 - 蘋果日報 <%= render_link_date(@link) %></p>
      </div>
      
    </div>
  </div>
</div>
<div class="span12"><hr></div>
<div class="span12">
  <div class="white-box">
    <div class="row">
      <div class="span12" align="center"><h3>隨機推薦</h3></div>
      <br>
      <%= render partial: "random_result" %>
    </div>
  </div>
</div>
<%= content_for :javascripts do %>
  <%= flowplayer_for :video, '/flowplayer.swf', 'jquery' do |player| %>
    <% player.playlist [{:url => @link.clip, :autoPlay => false, :autoBuffering => false }] %>
      <% player.onLoad do %>
        <% 'this.unmute();' %>
      <% end %>
  <% end %>
  <script type="text/javascript">
  $(document).ready(function () {
    $('#myCarousel').oneCarousel({
      easeIn: 'rotateIn',
      interval: 5000,
      pause: 'hover'
    });
  });
    $("#check-result").click(function(){
      $("div.vote-result").replaceWith('<div class="votes">覺得她正的共 <%= content_tag(:span, @link.likes.size, :class => "label label-info") %> 票<br>覺得不正的共 <%= content_tag(:span, @link.dislikes.size, :class => "label label-info") %> 票</div>');
    })

    $("span#toggleInfo").click(function(){
      $("div.detail").slideToggle(500);
      // $("img.main-img").slideToggle(500);
    })


  </script>
<% end %>
