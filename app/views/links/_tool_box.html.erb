  <div class="toolbox" align="center">
    <%= render_next_link %>
    <%= render_prev_link %>
    <div class="vote-result">
      <% if @voter.voted_on?(@link) %>
        <div class="votes">
        覺得她正的共 <%= content_tag(:span, @link.likes.size, :class => "label label-info") %> 票<br>覺得不正的共 <%= content_tag(:span, @link.dislikes.size, :class => "label label-info") %> 票</div>
      <% else %>
        <div class="btn-group">
          <%= link_to("她，我可以", like_link_path(@link), :class => "btn btn-danger", :remote => true, :method => :post) %>
          <span id="check-result" class="btn btn-info">沒意見，看結果</span>
          <%= link_to("不要鬧了!!", dislike_link_path(@link), :class => "btn btn-inverse", :remote => true, :method => :post) %>
        </div>
      <% end %>
    </div>
  </div>